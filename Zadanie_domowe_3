--------------------------------------------------------------------
Zadanie_01


SELECT
  FIRSTNAME,
  LASTNAME,
  CONCAT(SUBSTR(POSITION,1,2) , ID_USER) AS CODE
FROM USERS
;

--------------------------------------------------------------------
Zadanie_02


SELECT
  FIRSTNAME,
  REPLACE(REPLACE(LASTNAME, "K" , "X"), "L" , "X"),
  CONCAT(SUBSTR(POSITION,1,2) , ID_USER) AS CODE
FROM USERS
;

--------------------------------------------------------------------
Zadanie_03

SELECT
	LASTNAME,
	FIRSTNAME
FROM USERS
WHERE SUBSTR(LASTNAME,(LENGTH(LASTNAME) + 1) / 2) LIKE "%L%"
 ;


--------------------------------------------------------------------
Zadanie_04


SELECT
	FIRSTNAME,
	LASTNAME,
	SALARY_BASE,
	ROUND(SALARY_BASE * 0.15) + SALARY_BASE AS NEW_SALARY
FROM USERS
;


