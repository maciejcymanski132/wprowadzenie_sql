--------------------------------------------------------------------
Zadanie_01


SELECT
  FIRSTNAME,
  LASTNAME,
  CONCAT(SUBSTR(POSITION,1,2) , ID_USER) AS CODE
FROM USERS
;

--------------------------------------------------------------------
Zadanie_02


SELECT
  FIRSTNAME,
  REPLACE(REPLACE(LASTNAME, "K" , "X"), "L" , "X"),
  CONCAT(SUBSTR(POSITION,1,2) , ID_USER) AS CODE
FROM USERS
;

